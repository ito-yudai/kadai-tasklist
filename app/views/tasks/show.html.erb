<h1>id: <%= @task.id %> のタスクの詳細ページ</h1>

<table class="table">
	<tbody>
		<tr>
			<th>id</th>
			<td><%= @task.id %></td>
		</tr>
		<tr>
			<th>ステータス</th>
			<td><%= @task.status %></td>
		</tr>
		<tr>
			<th>タスク</th>
			<td><%= @task.content %></td>
		</tr>
	</tbody>
</table>

<%= link_to '編集ページ', edit_task_path(@task), class: "btn btn-default" %>
<%= link_to 'このタスクを削除する', @task, method: :delete, data: { confirm: '本当に削除してよろしいですか?' }, class: "btn btn-danger" %>
